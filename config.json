{
  "name": "FileSystem",
  "viewName": "File System",
  "type": "executer",
  "imgUrl": "logo.png",
  "execProgram": "node",
  "main": "app.js",
  "version": "2.3.0",
  "description": "Move, Delete, Copy, and Create Files and Directories",
  "category": [
    "Basic Tools"
  ],
  "keywords": [
    "file system",
    "directory",
    "file",
    "path",
    "mkdir",
    "delete",
    "scp"
  ],
  "methods": [
    {
      "name": "copy",
      "viewName": "Copy File/Directory",
      "params": [
        {
          "name": "source",
          "viewName": "Source Path",
          "type": "string",
          "required": true
        },
        {
          "name": "destination",
          "viewName": "Destination Path",
          "type": "string",
          "required": true
        },
        {
          "name": "noOverwrite",
          "viewName": "No Overwrite",
          "type": "boolean"
        }
      ]
    },
    {
      "name": "createDirectory",
      "viewName": "Create Directory",
      "params": [
        {
          "name": "path",
          "viewName": "Path",
          "type": "string",
          "required": true
        }
      ]
    },
    {
      "name": "move",
      "viewName": "Move File/Directory",
      "params": [
        {
          "name": "source",
          "viewName": "Source Path",
          "type": "string",
          "required": true
        },
        {
          "name": "destination",
          "viewName": "Destination Path",
          "type": "string",
          "required": true
        },
        {
          "name": "overwrite",
          "viewName": "Overwrite",
          "type": "boolean"
        }
      ]
    },
    {
      "name": "deletePath",
      "viewName": "Delete File/Directory",
      "params": [
        {
          "name": "path",
          "viewName": "Path",
          "type": "string",
          "required": true
        },
        {
          "name": "securely",
          "viewName": "Use Secure Delete",
          "description": "Overwrites files with random data before deleting.",
          "type": "boolean"
        }
      ]
    },
    {
      "name": "exists",
      "viewName": "Path Exists",
      "params": [
        {
          "name": "path",
          "viewName": "Path",
          "type": "string",
          "description": "Check whether the specified path exists or not.",
          "required": true
        }
      ]
    },
    {
      "name": "scpAction",
      "viewName": "SCP Action (Remote Download/Upload)",
      "params": [
        {
          "name": "host",
          "viewName": "Host URL",
          "type": "string",
          "required": true
        },
        {
          "name": "port",
          "viewName": "Port",
          "type": "int",
          "default": 22
        },
        {
          "name": "username",
          "viewName": "SSH Username",
          "type": "string"
        },
        {
          "name": "privateKey",
          "viewName": "SSH Private Key",
          "type": "vault"
        },
        {
          "name": "keyPath",
          "viewName": "SSH Private Key Path",
          "type": "string"
        },
        {
          "name": "passphrase",
          "viewName": "SSH Private Key Passphrase",
          "type": "vault"
        },
        {
          "name": "actionType",
          "viewName": "SCP Action Type",
          "type": "options",
          "required": true,
          "options": [
            {
              "id": "download_file",
              "name": "Download File"
            },
            {
              "id": "download_directory",
              "name": "Download Directory"
            },
            {
              "id": "upload_file",
              "name": "Upload File"
            },
            {
              "id": "upload_directory",
              "name": "Upload Directory"
            }
          ]
        },
        {
          "name": "localPath",
          "viewName": "Local Path",
          "type": "string",
          "required": true
        },
        {
          "name": "remotePath",
          "viewName": "Remote Path",
          "type": "string",
          "required": true
        }
      ]
    }
  ]
}
